int dayo = 0, tola = 0;
int a = 2, b = 3, c = 4, d = 5, e = 6, f = 7, g = 8;
int A = 12, B = 13;
void setup() {
  // put your setup code here, to run once:
  pinMode(a, OUTPUT);
  pinMode(b, OUTPUT);
  pinMode(c, OUTPUT);
  pinMode(d, OUTPUT);
  pinMode(e, OUTPUT);
  pinMode(f, OUTPUT);
  pinMode(g, OUTPUT);
  pinMode(A, OUTPUT);
  pinMode(B, OUTPUT);
  digitalWrite(A, HIGH);
  digitalWrite(B, HIGH);
}

void loop() {
  // put your main code here, to run repeatedly:
  dayo++;
  if (dayo==10){
    dayo=0;
    tola++;
  }
  if (tola==10){
    tola=0;
  }
  digits(dayo);
  digitalWrite(A, HIGH);
  digitalWrite(B, LOW);
  delay(150);
  digitalWrite(A, HIGH);
  digitalWrite(B, HIGH);
  digits(tola);
  digitalWrite(B, HIGH);
  digitalWrite(A, LOW);
  delay(150);
  digitalWrite(A, HIGH);
  digitalWrite(B, HIGH);

}



